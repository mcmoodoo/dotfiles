{
    "layer": "top",
    "position": "top",
    "height": 33,
    "margin": "3, 0, 2, 0",
    "modules-left": ["hyprland/workspaces","cpu","custom/separator","memory","custom/separator","network", "custom/recorder", "custom/audiorec"],
    "modules-center": ["hyprland/windows"],
    "modules-right": [
        "battery",
        "custom/separator",
        "custom/energy-rate",
        "custom/separator",
        "tray",
        "custom/separator",
        "pulseaudio",
        "custom/separator",
        "clock"],

    "custom/language": {
        "exec": "swaymsg --type get_inputs | grep \"xkb_active_layout_name\" | sed -u '1!d; s/^.*xkb_active_layout_name\": \"//; s/ (US)//; s/\",//' && swaymsg --type subscribe --monitor '[\"input\"]' | sed -u 's/^.*xkb_active_layout_name\": \"//; s/\",.*$//; s/ (US)//'"
    },
    "custom/separator": {
        "format": "|",
        "interval": "once",
        "tooltip": false
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ï®",
            "deactivated": "ï°"
        }
    },
    "tray": {
        "icon-size": 12,
        "spacing": 6
    },
    "clock": {
        "interval": 1,
        "locale": "C", 
        "format": "ï€— {:%I:%M %p}",
        "format-alt": "ï³ {:%a,%b %d}"
    },
    "cpu": {
        "format": "ï‹›&#8239;{usage}%",
        "tooltip": false,
        "on-click": "alacritty -e 'btm'"
    },
    "memory": {
        "interval": 30,
        "format": "ïƒ‰ {used:0.2f}GB",
        "on-click": "alacritty -e 'btm'",
        "max-length": 10,
        "tooltip": false,
        "warning": 70,
        "critical": 90
    },

    "backlight": {
        "format": "{icon}&#8239;{percent}%",
        "format-icons": ["ğŸ’¡", "ğŸ’¡"],
        "on-scroll-down": "brightnessctl -c backlight set 1%-",
        "on-scroll-up": "brightnessctl -c backlight set +1%"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}&#8239;{capacity}%",
        "format-charging": "ïƒ§&#8239;{capacity}%",
        "format-plugged": "ïƒ§&#8239;{capacity}%",
        "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
        // "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "ï‡«&#8239;({signalStrength}%)",
        "format-ethernet": "&#8239;{ifname}: {ipaddr}/{cidr}",
        "format-linked": "&#8239;{ifname} (No IP)",
        "format-disconnected": "âœˆ&#8239;Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{essid}: {ipaddr}"
    },
    "pulseaudio": {
      // "scroll-step": 1, // %, can be a float
      "format": "{icon} {volume}% {format_source}",
      "format-bluetooth": "{icon}ïŠ” {volume}% {format_source}",
      "format-bluetooth-muted": "ï‘¦ {format_source}",
      "format-muted": "ï‘¦  {format_source}",
      "format-source": "ï„° {volume}%",
      "format-source-muted": "ï„±",
      "format-icons": {
        "headphone": "ï€¥",
        "hands-free": "ï–",
        "headset": "ğŸ§",
        "phone": "ï‚•",
        "portable": "ï‚•",
        "car": "ï†¹",
        "default": ["ï€¦", "ï€§", "ï€¨"]
      },
      "on-click": "pavucontrol"
    },
    "mpd": {
      "format": "{stateIcon} {artist} - {title}",
      "format-disconnected": "ğŸ¶",
      "format-stopped": "â™ª",
      "interval": 10,
      "consume-icons": {
        "on": "ïƒ„ " // Icon shows only when "consume" is on
      },
      "random-icons": {
        "off": "<span color=\"#f53c3c\">ï´</span> ", // Icon grayed out when "random" is off
        "on": "ï´ "
      },
      "repeat-icons": {
        "on": "ï€ "
      },
      "single-icons": {
        "on": "ï€1 "
      },
      "state-icons": {
        "paused": "ïŒ",
        "playing": "ï‹"
      },
      "tooltip-format": "MPD (connected)",
      "tooltip-format-disconnected": "MPD (disconnected)",
      "max-length": 45
    },

    "custom/energy-rate": {
        "interval": 1,
        "exec": "upower -e | rg BAT1 | xargs upower -i | rg energy-rate | awk '{print $2, $3}'",
    },

    "custom/recorder": {
        "format": "ï€½ Rec",
        "format-disabled": "ï€½ Off-air", //An empty format will hide the module.
        "return-type": "json",
        "interval": 1,
        "exec": "echo '{\"class\": \"recording\"}'",
        "exec-if": "pgrep wf-recorder",
    },

    "custom/audiorec": {
        "format": "â™¬ Rec",
        "format-disabled": "â™¬ Off-air", //An empty format will hide the module.
        "return-type": "json",
        "interval": 1,
        "exec": "echo '{\"class\": \"audio recording\"}'",
        "exec-if": "pgrep ffmpeg",
    },

}
